<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:minHeight="88dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="4dp"
        android:textColor="@color/text3"
        android:textSize="24sp"
        android:textStyle="bold">
	</TextView>
	
    <Button
        android:id="@+id/button_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginStart="@dimen/ten"
        android:layout_weight="0"
        android:background="@drawable/round_button"
        android:contentDescription="@string/button_up"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/button_up"
        android:textColor="@color/text2"
        android:textSize="32sp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="moveUp" />

    <Button
        android:id="@+id/button_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginStart="@dimen/ten"
        android:layout_weight="0"
        android:background="@drawable/round_button"
        android:contentDescription="@string/button_down"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/button_down"
        android:textColor="@color/text2"
        android:textSize="32sp"
        android:textStyle="bold" 
        android:clickable="true"
		android:onClick="moveDown" />
        
    
</LinearLayout><!-- From: file:/Users/marktreble/AndroidstudioProjects/F3Ftimer/f3Ftimer/src/main/res/layout/listrow_reorder.xml -->